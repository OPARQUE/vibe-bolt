{% include 'partials/_header.twig' %}
{% setcontent naradio = 'secao/na-radio' %}
<div class="conteudo-central">
    <div class="container">
        <div class="row">
            {{ menu('main', 'partials/_main_menu.twig') }}
            <div class="col-md-7 col-sm-8 col-xs-12">
                <div class="row">
                    <div class="col-md-12 capa-pagina" style="background-image: url({{naradio.capa|image()}});">
                        <h2 class="text-bg">
                            <span>{{naradio.titulo}}</span>
                        </h2>
                    </div>
                </div>
                <div class="row pagina">
                    <div class="col-md-12">
                        {{ menu('na-radio', 'partials/_category_menu.twig') }}
                        <div class="row">
                            {% setcontent ultimapromocao = 'artigos-radio' where { 'categorias-radio': 'promocoes' } returnsingle %}
                            <div class="col-xs-12 banner-promocao">
                                <a href="{{ ultimapromocao.link }}">
                                    <img src="{{ thumbnail(ultimapromocao.image, 640, 120) }}" class="img-responsive">
                                    <h4 class="text-bg">
                                        <span>
                                            {{ ultimapromocao.titulo }}
                                        </span>
                                    </h4>
                                    <div class="badge-promo">
                                        <img src="{{ paths.theme }}assets/img/badge-promocoes.png" />
                                    </div>
                                </a>
                            </div>
                        </div>

                        <div class="row reblogs">
                            {% setcontent programas = 'programas-radio' %}
                            {% for item in programas %}
                                <div class="col-xs-2">
                                    <a href="{{ item.url }}" target="{{ item.destino }}"><img src="{{ thumbnail(item.imagem, 945,340) }}" class="img-responsive"/></a>
                                </div>
                            {% endfor %}
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-xs-12 item-list-page no-line">
                                        {% setcontent ultimopodcast = 'artigos-radio' where { 'categorias-radio': 'podcasts' } returnsingle %}
                                        <img src="{{ thumbnail(ultimopodcast.image, 314, 180) }}" class="img-responsive">
                                        <h3><a href="{{ ultimopodcast.link }}">{{ ultimopodcast.titulo }}</a></h3>
                                        <div class="meta-post">
                                            {{ultimopodcast.datepublish|localdate()}} - postado por <strong>{{ultimopodcast.user.displayname}}</strong><br>
                                        </div>
                                        <p>
                                            {{ ultimopodcast.resumo|excerpt(140) }}
                                        </p>
                                        <a href="{{ ultimopodcast.link }}" class="leia-mais">Leia +</a>
                                    </div>
                                    {% setcontent podcasts = 'artigos-radio/latest/4' where { 'categorias-radio': 'podcasts' } %}
                                    {% for item in podcasts[1:] %}
                                        <div class="col-xs-12 item-list-page no-line">
                                            <h3><a href="{{ item.link }}">{{ item.titulo }}</a></h3>
                                            <img src="{{ thumbnail(item.image, 314, 60) }}" class="img-responsive">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-xs-12 item-list-page no-line">
                                        {% setcontent ultimotop = 'artigos-radio' where { 'categorias-radio': 'tops' } returnsingle %}
                                        <img src="{{ thumbnail(ultimotop.image, 314, 180) }}" class="img-responsive">
                                        <h3><a href="{{ ultimotop.link }}">{{ ultimotop.titulo }}</a></h3>
                                        <div class="meta-post">
                                            {{ultimotop.datepublish|localdate()}} - postado por <strong>{{ultimotop.user.displayname}}</strong><br>
                                        </div>
                                        <p>
                                            {{ ultimotop.resumo|excerpt(140) }}
                                        </p>
                                        <a href="{{ ultimotop.link }}" class="leia-mais">Leia +</a>
                                    </div>
                                    {% setcontent tops = 'artigos-radio/latest/4' where { 'categorias-radio': 'tops' } %}
                                    {% for item in tops[1:] %}
                                        <div class="col-xs-12 item-list-page no-line">
                                            <h3><a href="{{ item.link }}">{{ item.titulo }}</a></h3>
                                            <img src="{{ thumbnail(item.image, 314, 60) }}" class="img-responsive">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <div class="col-sm-3 hidden-xs hidden-sm">
                {% include 'partials/_sidebar_right.twig' %}
            </div>
        </div>
    </div>
</div><!--/.conteudo-central -->
{% include 'partials/_footer.twig' %}